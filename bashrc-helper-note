# Display a note inside the prompt

source bash-helpers

color=$GREEN

if [[ "$MY_PROMPT_NOTE" =~ ^\s*$ ]] ; then
  echo -n
  exit
fi

if [[ "$MY_PROMPT_NOTE" =~ (local|dev|test|prod|docker) ]] ; then
  pattern=${BASH_REMATCH[1]}
  case $pattern in
    local)  color=$BLUE ;;
    dev)    color=$GREEN ;;
    test)   color=$ORANGE ;;
    prod)   color=$RED ;;
    docker) color=$PINK ;;
  esac
fi

echo -n "$color$MY_PROMPT_NOTE$NO_COLOR"

